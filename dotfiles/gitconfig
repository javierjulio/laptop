[user]
	name = Javier Julio
	email = jjfutbol@gmail.com
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore
	editor = "open -W -n" # Uses TextEdit by default
[alias]
  # Show list of all aliases in this file.
  a = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
  b = branch
  # Delete Branch
  db = branch -D
  # New Branch
  nb = checkout -b
  ci = commit
  co = checkout
  cgl = config --global --list
  f = fetch
  fo = fetch origin
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  p = push
  po = push origin
  pos = push origin staging
  pom = push origin master
  phm = push heroku master
  ros = rebase origin/staging
  rom = rebase origin/master
  s = status
  todos = grep -EI "TODO|FIXME" -- './*' ':!vendor/' ':!tmp/' | grcat conf.todos
  # Undo the last commit but keep changes intact.
  uci = reset --soft HEAD^
[color]
  ui = auto
  branch = auto
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
