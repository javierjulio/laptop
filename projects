#!/usr/bin/env bash

echo -e "\nCloning GitHub projects..."

PROJECTS_PREFIX="$HOME/Projects"

clone_project() {
  local project=$1
  local directory="${2:-$project}"
  if [ ! -d "$PROJECTS_PREFIX/$project" ]; then
    git clone "https://github.com/javierjulio/$project.git" "$PROJECTS_PREFIX/$directory"
    echo "Cloned $project successfully."
  fi
}

clone_project "javierjulio.github.io" "javierjulio"
clone_project "paysafe"
clone_project "jsoneditor-rails"
clone_project "activeadmin"
