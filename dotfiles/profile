#!/bin/bash

# Autocorrect typos in path names when using `cd`
shopt -s cdspell

# Append to the Bash history file, rather than overwriting it
shopt -s histappend

# Case-insensitive globbing (used in pathname expansion)
shopt -s nocaseglob

brew_prefix="$(brew --prefix)"

# Load bash completion
if [ -f "${brew_prefix}/etc/bash_completion" ]; then
  # shellcheck disable=SC1090
  . "${brew_prefix}/etc/bash_completion"

  # setup autocomplete for git alias "g"
  -complete -o bashdefault -o default -o nospace -F _git g 2>/dev/null \ || complete -o default -o nospace -F _git g
fi

# Load grc (Terminal colorizer)
if [ -f "${brew_prefix}/etc/grc.bashrc" ]; then
  # shellcheck disable=SC1090
  . "${brew_prefix}/etc/grc.bashrc"
fi

unset brew_prefix

# ========================================
# Load and initialize
# ========================================

# Load bash files
# ~/.bash_local can be used for settings you donâ€™t want to commit
for file in exports bash_aliases bash_functions bash_local; do
  # shellcheck disable=SC1090
  [ -e "$HOME/.$file" ] && source "$HOME/.$file"
done
