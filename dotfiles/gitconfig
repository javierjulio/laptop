[user]
  name = Javier Julio
  email = jjfutbol@gmail.com
[github]
  user = javierjulio
[credential]
  helper = osxkeychain
[core]
  excludesfile = ~/.gitignore
  editor = "open -W -n" # Uses TextEdit by default
[alias]
  a = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' # List all git aliases
  b = branch
  db = branch -D # Delete branch
  nb = checkout -b # New branch
  ci = commit
  co = checkout
  cgl = config --global --list
  f = fetch
  fo = fetch origin
  fu = fetch upstream
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  p = push
  po = push origin
  pom = push origin master
  rom = rebase origin/master
  rum = rebase upstream/master
  reset-origin-head = remote set-head origin --auto # Reset local if default branch changed remotely e.g. master->main
  s = status
  uci = reset --soft HEAD^ # Undo last commit with changes intact
[color]
  ui = auto
  branch = auto
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
