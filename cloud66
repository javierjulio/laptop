#!/usr/bin/env bash

set -e

if [ -z "$CX_PREFIX" ]; then
  CX_PREFIX="$HOME/.bin"
fi

if [ -f "$CX_PREFIX/cx" ]; then
  echo -e "\nUpdating Cloud 66 toolbelt..."
  cx update
else
  echo -e "\nInstalling latest Cloud 66 toolbelt..."

  curl https://app.cloud66.com/toolbelt/osx -L -o cloud66.zip

  unzip cloud66.zip

  cp cx_*_darwin_amd64/cx "$CX_PREFIX"

  rm -rf cloud66.zip cx_*_darwin_amd64
fi
