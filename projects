#!/usr/bin/env bash

echo -e "\nCloning GitHub projects..."

PROJECTS_PREFIX="$HOME/Projects"

clone_repo() {
  local repo=$1
  local directory="${2:-$repo}"
  if [ ! -d "$PROJECTS_PREFIX/$directory" ]; then
    git clone "https://github.com/javierjulio/$repo.git" "$PROJECTS_PREFIX/$directory"
    echo "Cloned $repo successfully."
  fi
}

clone_repo "javierjulio.github.io" "javierjulio"
clone_repo "activeadmin"
clone_repo "binlist-elixir"
clone_repo "dwolla-v2-ruby"
clone_repo "envied"
clone_repo "humble-bundle-key-exporter"
clone_repo "jsoneditor-rails"
clone_repo "paysafe"
